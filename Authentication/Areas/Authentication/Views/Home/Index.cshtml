@{
}




@model Portal.Module.Authentication.ViewModel.LoginDto

@if (!User.Identity.IsAuthenticated)
{
    <div class="row">
        <div class="offset-md-4 col-md-offset-4 col-md-5 col-xs-12">
            <form method="post" class="needs-validation" asp-route-moduleId="@CoreController.ModuleConfiguration.ModuleId" asp-area="Authentication" asp-controller="Home" asp-action="Login">
                

                <div class="row">
                    <div class="col-xs-12">
                        <label class="form-label">
                            نام کاربری
                        </label>
                        <input asp-for="Username" type="text" class="form-control is-invalid" required/>
                        <div class="invalid-feedback">
                            @Html.ValidationMessageFor(model => model.Username)
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-12">
                        <label>
                            رمز عبور
                        </label>
                        <input asp-for="Password" type="password" class="form-control is-invalid" required />
                        <div class="invalid-feedback">
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-xs-12">
                        <button type="submit" class="btn btn-block btn-success">ورود</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
    
}
else
{
    <div class="row">
        <div class="col-xs-12">
            You Are Authenticated
        </div>
    </div>
}
